{% extends "layout.twig" %}
{% import 'controls.twig' as controls %}

{%  block head %}
    <title>SOARCE</title>
{%  endblock %}

{%  block header %}
    Coverage Analysis
{% endblock %}

{% block main %}


    <p>See below a list of files in which at least one line was executed. Click on a link to open the detail view of the code.
        The list can be filtered with the following controls:</p>

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Filters</h3>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="">Application:</label>
                        {{ controls.select('applicationId', applicationId, applications) }}
                    </div>
                    <div class="form-group">
                        <label for="">Usecases:</label>
                        {{ controls.select('usecaseId',     usecaseId,     usecases) }}
                    </div>
                    <div class="form-group">
                        <label for="">Requests:</label>
                        {{ controls.select('requestId',     requestId,     requests) }}
                    </div>
                    <div class="form-group">
                        <input type="submit" value="update" name="whatever" class="btn btn-default btn-primary">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Files</h3>
        </div>
        <div class="box-body">
            <table id="filesTable" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>application</th>
                        <th>file</th>
                        <th>lines covered</th>
                    </tr>
                </thead>
                <tbody>
                {% for file in files %}
                    <tr>
                        <td>{{ file.applicationName }}</td>
                        <td>
                            <a href="/coverage/file/{{ file.fileId }}?usecaseId={{ usecaseId }}&requestId={{ requestId }}&applicationId={{ applicationId }}">
                                {{ file.fileName | stripCommonPath(services[file.applicationName].commonPath) }}
                            </a>
                        </td>
                        <td style="text-align: right">{{ file.lines }}</td>
                    </tr>
                {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th>application</th>
                        <th>file</th>
                        <th>lines covered</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

{% endblock %}

{% block pageEnd %}
    <script>
        $(function () {
            $('#filesTable').DataTable({
                'paging'      : true,
                'pageLength'  : 25,
                'lengthChange': true,
                "lengthMenu": [ 10, 25, 50, 100, 250 ],
                'searching'   : true,
                'ordering'    : true,
                'info'        : true,
                'autoWidth'   : true
            });

            $('.select2').select2();
        })
    </script>

{% endblock %}
