<div class="modal fade" id="{{ modalId }}">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-{{ type }}">
                <h4 class="modal-title" id="{{ modalId }}Title">{{ title }}</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{ message }}
            </div>
            <form method="post" style="padding:0; margin:0;" id="modal-{{ type }}-form">
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-outline-dark" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-outline-dark btn-{{ type }}" name="{{ actionName }}" value="{{ actionValue }}">{{ actionLabel|raw }}</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->


<script>
    $('#{{ modalId }}').on('show.bs.modal', function (event) {
        let button     = $(event.relatedTarget);
        let formAction = button.data('formaction');
        let modal      = $(this);

        document.getElementById('modal-{{ type }}-form').action = formAction;
    })
</script>
