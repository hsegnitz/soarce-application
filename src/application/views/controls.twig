
{% macro select(name, current, list) %}
    <select multiple="multiple" name="{{ name }}[]" class="select2" style="width: 100%;">
        <option value="">-- all -- please choose</option>
        {% for id, row in list %}
            {% if id in current %}
                <option value="{{ id }}" selected="selected">{{ row.name }}</option>
            {% else %}
                <option value="{{ id }}">{{ row.name }}</option>
            {% endif %}
        {% endfor %}
    </select>
{% endmacro %}