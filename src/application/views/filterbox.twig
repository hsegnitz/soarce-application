            <button type="button" class="btn btn-tool" data-card-widget="collapse"><i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->

    <!-- form start -->
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    {% block filters %}{% endblock %}
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            {% block buttons %}{% endblock %}
        </div>
</div>
</form>
