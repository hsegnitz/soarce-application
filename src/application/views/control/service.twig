{% extends "layout.twig" %}

{%  block head %}
    <title>SOARCE</title>
{%  endblock %}

{%  block header %}
    <h2>Control</h2>
{% endblock %}

{% block main %}

    <h3>Services</h3>

    <h4>Overview</h4>
    <table>
        <thead>
            <tr>
                <th>name</th>
                <th>url</th>
                <th>parameter_name</th>
                <th>available</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.serviceConfig.name }}</td>
                <td>{{ service.serviceConfig.url }}</td>
                <td>{{ service.serviceConfig.parameterName }}</td>
                <td>{% if service.ping %}yes{% else %}no{% endif %}</td>
                <td>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <p>
        <a href="/">back</a>
    </p>
{% endblock %}


