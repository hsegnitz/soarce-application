{
  "name": "soarce/application",
  "description": "SOARCE application",
  "type" : "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Holger Segnitz",
      "email": "holger@segnitz.net",
      "homepage": "https://www.segnitz.net/",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/soarce-qa/application/issues",
    "forum":  "https://github.com/soarce-qa/application/issues",
    "wiki":   "https://github.com/soarce-qa/application/wiki",
    "source": "https://github.com/soarce-qa/application",
    "docs":   "https://github.com/soarce-qa/application/wiki"
  },
  "config": {
    "platform": {
      "php": "8.4"
    },
    "allow-plugins": {
      "php-http/discovery": true
    }
  },
  "require": {
    "php": ">=8.4,<9.0-DEV",
    "ext-json": "*",
    "ext-mysqli": "*",
    "ext-redis": "*",
    "slim/slim": "^4.14",
    "twig/twig": "^3.19",
    "slim/twig-view": "^3.4",
    "symfony/dotenv": "^7.2",
    "swaggest/json-schema": "^0.12.43",
    "almasaeed2010/adminlte": "3.*",
    "sentry/sentry": "^4.10",
    "php-http/curl-client": "^2.3",
    "http-interop/http-factory-guzzle": "^1.1",
    "php-di/php-di": "^7.0",
    "twig/intl-extra": "^3.20",
    "slim/http": "^1.4",
    "phpunit/php-code-coverage": "^12.3",
    "symfony/console": "^7.3",
    "soarce/parallel-process-dispatcher": "^6.2"
  },
  "autoload": {
    "psr-4": {
      "Soarce\\": "src/library/Soarce/",
      "Soarce\\Application\\": "src/application/"
    }
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "php-parallel-lint/php-parallel-lint": "^1.4"
  }
}
